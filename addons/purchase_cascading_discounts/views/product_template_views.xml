<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista heredada para añadir campos de descuento en la lista de proveedores -->
    <record id="product_supplierinfo_tree_view_cascade" model="ir.ui.view">
        <field name="name">product.supplierinfo.tree.cascade</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="purchase.product_supplierinfo_tree_view2"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="discount1" optional="show"/>
                <field name="discount2" optional="show"/>
                <field name="discount3" optional="show"/>
                <field name="discount4" optional="show"/>
                <field name="final_price" optional="show" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Vista heredada para añadir campos de descuento en el formulario de proveedores -->
    <record id="product_supplierinfo_form_view_cascade" model="ir.ui.view">
        <field name="name">product.supplierinfo.form.cascade</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <separator string="Descuentos en Cascada"/>
                <field name="discount1" string="Desc. 1 (%)"/>
                <field name="discount2" string="Desc. 2 (%)"/>
                <field name="discount3" string="Desc. 3 (%)"/>
                <field name="discount4" string="Desc. 4 (%)"/>
                <field name="final_price" string="Precio Final" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>