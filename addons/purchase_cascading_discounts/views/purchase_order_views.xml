<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista heredada del formulario de pedido de compra -->
    <record id="purchase_order_form_inherit_cascade" model="ir.ui.view">
        <field name="name">purchase.order.form.cascade.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Añadir columnas de descuentos aplicados en la vista de lista -->
            <xpath expr="//field[@name='order_line']//field[@name='price_unit']" position="after">
                <field name="price_before_discount" optional="hide" string="Precio Base"/>
                <field name="applied_discount_1" optional="show" string="D1 (%)" readonly="parent.state in ('done', 'cancel')" force_save="1"/>
                <field name="applied_discount_2" optional="show" string="D2 (%)" readonly="parent.state in ('done', 'cancel')" force_save="1"/>
                <field name="applied_discount_3" optional="show" string="D3 (%)" readonly="parent.state in ('done', 'cancel')" force_save="1"/>
                <field name="applied_discount_4" optional="show" string="D4 (%)" readonly="parent.state in ('done', 'cancel')" force_save="1"/>
                <field name="applied_discount_5" optional="show" string="D5 (%)" readonly="parent.state in ('done', 'cancel')" force_save="1"/>
                <field name="computed_final_price" optional="hide" string="Precio Calc." readonly="1"/>
            </xpath>
            
            <!-- Añadir campos en el formulario de línea de pedido -->
            <xpath expr="//field[@name='order_line']//form//field[@name='taxes_id']" position="after">
                <separator string="Descuentos en Cascada"/>
                <group col="4">
                    <field name="price_before_discount" string="Precio Base"/>
                    <field name="computed_final_price" readonly="1" string="Precio Calculado"/>
                    <field name="applied_discount_1" readonly="parent.state in ('done', 'cancel')"/>
                    <field name="applied_discount_2" readonly="parent.state in ('done', 'cancel')"/>
                    <field name="applied_discount_3" readonly="parent.state in ('done', 'cancel')"/>
                    <field name="applied_discount_4" readonly="parent.state in ('done', 'cancel')"/>
                    <field name="applied_discount_5" readonly="parent.state in ('done', 'cancel')"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>