<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista heredada del formulario de pedido de compra -->
    <record id="purchase_order_form_inherit_cascade" model="ir.ui.view">
        <field name="name">purchase.order.form.cascade.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Añadir columnas de descuentos aplicados en la vista de árbol -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="after">
                <field name="price_before_discount" optional="hide" readonly="1"/>
                <field name="applied_discount_1" optional="show" readonly="1" string="D1 (%)"/>
                <field name="applied_discount_2" optional="show" readonly="1" string="D2 (%)"/>
                <field name="applied_discount_3" optional="show" readonly="1" string="D3 (%)"/>
                <field name="applied_discount_4" optional="show" readonly="1" string="D4 (%)"/>
            </xpath>
            
            <!-- Añadir campos en el formulario de línea de pedido -->
            <xpath expr="//field[@name='order_line']/form//group[1]" position="after">
                <group string="Descuentos Aplicados" colspan="4" col="4">
                    <field name="price_before_discount" readonly="1"/>
                    <newline/>
                    <field name="applied_discount_1" readonly="1"/>
                    <field name="applied_discount_2" readonly="1"/>
                    <field name="applied_discount_3" readonly="1"/>
                    <field name="applied_discount_4" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
    
    <!-- Vista heredada del árbol de pedidos de compra -->
    <record id="purchase_order_tree_inherit_cascade" model="ir.ui.view">
        <field name="name">purchase.order.tree.cascade.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
        <field name="arch" type="xml">
            <!-- Opcional: añadir indicador si tiene descuentos en cascada -->
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="has_cascading_discounts" invisible="1"/>
                <widget name="boolean_toggle" 
                        field="has_cascading_discounts" 
                        invisible="not has_cascading_discounts"
                        options='{"icon": "fa-percent", "color": "success"}'/>
            </xpath>
        </field>
    </record>
</odoo>