<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Categoría del módulo -->
    <record id="module_category_sale_pricelist_approval" model="ir.module.category">
        <field name="name">Aprobación de Precios de Venta</field>
        <field name="description">Gestión de aprobaciones para precios especiales en ventas</field>
        <field name="sequence">20</field>
    </record>
    
    <!-- Grupo de Aprobadores de Precios -->
    <record id="group_sale_price_approver" model="res.groups">
        <field name="name">Aprobador de Precios Especiales</field>
        <field name="category_id" ref="module_category_sale_pricelist_approval"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="comment">Usuarios que pueden aprobar o rechazar precios manuales en órdenes de venta</field>
    </record>
    
    <!-- Grupo de Configuración de Listas de Precio -->
    <record id="group_pricelist_configurator" model="res.groups">
        <field name="name">Configurador de Listas de Precio por Línea</field>
        <field name="category_id" ref="module_category_sale_pricelist_approval"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        <field name="comment">Usuarios que pueden configurar qué listas de precio están disponibles para selección en líneas</field>
    </record>
    
    <!-- Reglas de Registro para Sale Order -->
    <record id="sale_order_rule_salesman_approval" model="ir.rule">
        <field name="name">Vendedor: Ver todas las órdenes</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="sale_order_rule_approver" model="ir.rule">
        <field name="name">Aprobador: Ver órdenes pendientes de aprobación</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="domain_force">['|', ('user_id', '=', user.id), ('state', '=', 'to_approve')]</field>
        <field name="groups" eval="[(4, ref('group_sale_price_approver'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <!-- Reglas para líneas de orden de venta -->
    <record id="sale_order_line_rule_approval" model="ir.rule">
        <field name="name">Líneas de venta con control de aprobación</field>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
    <!-- Permisos específicos para campos de aprobación -->
    <record id="access_sale_order_line_approval_fields" model="ir.model.access">
        <field name="name">sale.order.line.approval.fields</field>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="group_id" ref="group_sale_price_approver"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>